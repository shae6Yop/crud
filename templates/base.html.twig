<!DOCTYPE html>
<html>
    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href={{ asset("app.css") }} />
    {% endblock %}
    </head>
    <body>
    <div class="nav">
      <div class="logo">
        <a href={{ path('home') }} class="logo">Article App</a>
      </div>

      <div class="nav-links">
        <a href={{ path('article_index') }}>Articles</a>
        {% if app.user is null %}
        <a href={{ path('app_login') }}>Login</a>
        <a href={{ path('app_register') }}>Register</a>
        {% endif %}
        {% if app.user is not null %}
        <a class="logout"
           href={{ path('app_logout') }}>Logout (<span id="logged-in-as">{{
            app.user.username }}</span>)</a>
        {% endif %}
      </div>
    </div>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
